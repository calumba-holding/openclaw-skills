{
  "homeassistant": {
    "url": "http://YOUR_HOME_ASSISTANT_URL:8123",
    "auth_file": "homeassistant_auth.json",
    "token": "YOUR_HOME_ASSISTANT_LONG_LIVED_ACCESS_TOKEN"
  },
  "natural_commands": {
    "lights": {
      "客厅灯": "switch.your_living_room_light_entity_id",
      "客厅主灯": "switch.your_main_living_room_light_entity_id", 
      "客厅阅读灯": "switch.your_reading_lamp_entity_id",
      "卧室灯": "switch.your_bedroom_light_entity_id"
    },
    "curtains": {
      "卧室窗帘": "cover.your_bedroom_curtain_entity_id"
    }
  },
  "monitoring": {
    "enabled": true,
    "thresholds": {
      "pet_water_filter_min": 10,
      "pet_water_battery_min": 10,
      "humidity_max": 70,
      "humidity_min": 40,
      "check_interval_minutes": 30
    },
    "notification_priority": {
      "pet_devices": "high",
      "environment_devices": "medium",
      "lighting_devices": "low"
    }
  },
  "voice_broadcast": {
    "enabled": true,
    "media_player": "media_player.your_xiaomi_speaker_entity_id"
  }
}