{
  "name": "openclaw-api-credits-lite",
  "version": "1.0.1",
  "description": "Display API credit balances for 5 core providers with video game style health bars. Lite version with API auto-checks and manual sync.",
  "main": "scripts/show_credits.py",
  "scripts": {
    "show": "python3 scripts/show_credits.py",
    "sync": "python3 scripts/sync_provider.py",
    "topup": "python3 scripts/topup.py",
    "check-apis": "python3 scripts/check_all_apis.py"
  },
  "optionalEnv": [
    "OPENAI_API_KEY",
    "OPENROUTER_API_KEY",
    "VERCEL_AI_GATEWAY_KEY"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FranciscoBuiltDat/openclaw-api-credits-lite.git"
  },
  "keywords": [
    "api",
    "billing",
    "credits",
    "health-bar",
    "anthropic",
    "openai",
    "openrouter",
    "mistral",
    "groq",
    "openclaw"
  ],
  "author": "OpenClaw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FranciscoBuiltDat/openclaw-api-credits-lite/issues"
  },
  "homepage": "https://github.com/FranciscoBuiltDat/openclaw-api-credits-lite#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
