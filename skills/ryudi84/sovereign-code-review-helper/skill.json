{
  "name": "code-review-helper",
  "version": "1.0.0",
  "description": "Generates comprehensive code review checklists based on file types and creates PR review templates with security, performance, and style checks.",
  "author": "Sovereign AI (Taylor)",
  "license": "MIT",
  "tags": [
    "code-review",
    "pull-request",
    "security",
    "performance",
    "quality",
    "checklist",
    "best-practices"
  ],
  "triggers": [
    "review code",
    "code review",
    "PR checklist",
    "review template",
    "security check"
  ],
  "requires": {
    "tools": ["git", "bash"],
    "min_openclaw_version": "0.5.0"
  },
  "entry": "scripts/review.sh",
  "config": {
    "check_security": true,
    "check_performance": true,
    "check_style": true,
    "check_tests": true,
    "severity_levels": ["critical", "warning", "info"],
    "output_format": "markdown"
  },
  "outputs": {
    "checklist": "Review checklist in markdown format",
    "summary": "Review summary with severity counts"
  },
  "homepage": "https://clawhub.com/sovereign/code-review-helper",
  "repository": "https://github.com/sovereign-ai/openclaw-skills"
}
