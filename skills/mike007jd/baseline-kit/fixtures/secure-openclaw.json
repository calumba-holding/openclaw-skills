{
  "gateway": {
    "bind": "127.0.0.1",
    "auth": {
      "rateLimit": {
        "maxAttempts": 5,
        "windowMs": 60000
      }
    }
  },
  "skills": {
    "allowedSources": ["clawhub.com"],
    "requireVerification": true
  },
  "logging": {
    "audit": true,
    "retentionDays": 30
  },
  "backup": {
    "enabled": true,
    "target": "./backups"
  }
}
