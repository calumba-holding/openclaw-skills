{
  "name": "rune",
  "version": "1.1.5",
  "description": "Self-improving AI memory system with intelligent context injection and adaptive learning",
  "keywords": ["self-improvement", "intelligent-memory", "adaptive", "context-injection", "project-management"],
  "homepage": "https://github.com/TheBobLoblaw/rune",
  "metadata": {
    "install": [
      {
        "id": "rune",
        "kind": "script", 
        "script": "./install.sh",
        "label": "Install Rune Memory System"
      },
      {
        "id": "rune-workflow",
        "kind": "script",
        "script": "./setup-workflow.sh", 
        "label": "CRITICAL: Set up workflow integration"
      }
    ],
    "warnings": [
      "Requires workflow integration beyond basic installation",
      "Memory system must be actively used to provide value",
      "Includes forcing functions to prevent common usage failures"
    ]
  },
  "sessionHooks": {
    "start": "./rune-session-handler.sh start",
    "end": "./rune-session-handler.sh end"
  }
}
