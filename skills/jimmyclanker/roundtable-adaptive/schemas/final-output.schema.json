{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "topic": { "type": "string" },
    "mode": { "type": "string", "enum": ["debate", "build", "redteam", "vote", "default"] },
    "panel": { "type": "array", "items": { "type": "string" } },
    "rounds_completed": { "type": "integer" },
    "consensus": { "type": "array", "items": { "type": "string" } },
    "divergences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "topic": { "type": "string" },
          "positions": { "type": "object" }
        }
      }
    },
    "recommendation": { "type": "string" },
    "outlier": { "type": "string" },
    "red_flags": { "type": "array", "items": { "type": "string" } },
    "action_plan": {
      "type": "object",
      "properties": {
        "next_24h": { "type": "string" },
        "next_7d": { "type": "string" }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "timeouts": { "type": "array", "items": { "type": "string" } },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  },
  "required": ["topic", "mode", "panel", "recommendation"]
}
