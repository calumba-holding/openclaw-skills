{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "critiques": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": { "type": "string" },
          "issue": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high"] }
        },
        "required": ["target", "issue"]
      }
    },
    "self_defense": { "type": "string" },
    "revised_recommendation": { "type": "string" }
  },
  "required": ["critiques", "self_defense"]
}
